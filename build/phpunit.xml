<?xml version="1.0" encoding="UTF-8"?>

<phpunit codecoverage="true" colors="true" stopOnFailure="false">
	<formatter type="clover" usefile="false"/>
	<php>
		<server name="doc_root" value="../"/>
		<server name="src_path" value="/src"/>
		<server name="vendor_path" value="/vendor"/>
	</php>

	<logging>
		<log type="coverage-html" target="coverage"/>
		<log type="coverage-clover" target="coverage/clover.xml"/>
		<log type="coverage-crap4j" target="coverage/crap4j.xml"/>
		<log type="junit" target="logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>
	<listeners>
		<listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener">
			<arguments>
				<array>
					<element key="slowThreshold">
						<integer>1000</integer>
					</element>
					<element key="reportLength">
						<integer>60</integer>
					</element>
				</array>
			</arguments>
		</listener>
	</listeners>

	<testsuites>
		<testsuite name="src">
			<directory suffix=".php">../tests</directory>
		</testsuite>
	</testsuites>
	<filter>
        <whitelist>
    	    <directory suffix=".php">../</directory>
            <exclude>
                <directory suffix=".php">temp</directory>
                <directory suffix=".php">vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
